@{
    ViewData["Title"] = "Talep Yönetimi";
    Layout = "~/Views/Shared/_PersonelLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/personelpanel.css" />
}

<div class="container mt-4">
    <h2 class="mb-4" style="color:#4B49AC;">Talep Türünü Seçiniz</h2>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm" style="border-radius: 12px;">
                <div class="card-body text-center">
                    <h4 class="card-title" style="color: #4B49AC;">İzin Talebi</h4>
                    <p class="card-text" style="color: #555;">İzinle ilgili talep oluşturmak için buraya tıklayınız.</p>
                    <a asp-action="IzinTalebi" class="btn btn-gorev-ekle mt-3">İzin Talebine Git</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm" style="border-radius: 12px;">
                <div class="card-body text-center">
                    <h4 class="card-title" style="color: #4B49AC;">Görev Talebi</h4>
                    <p class="card-text" style="color: #555;">Görev için talep oluşturmak ve taleplerinizi görüntülemek için buraya tıklayınız.</p>
                    <a asp-controller="PersonelPanel" asp-action="GorevTalebi" class="btn btn-gorev-ekle mt-3">Görev Talebine Git</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
}
