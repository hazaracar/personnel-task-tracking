@model IEnumerable<PersonelTakip.Models.Gorev>

@{
    ViewData["Title"] = "Görev Listesi";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/gorevpaneli.css" />
}

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <h4 style="color:#4B49AC;" class="card-title text-uppercase mb-4">Görev Listesi</h4>

            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table">
                        <tr>
                            <th>#</th>
                            <th>Görev Adı</th>
                            <th>Şehir</th>
                        
                            <th>Plaka</th>
                            <th>Ekipman</th>
                            <th>Durum</th>
                            <th>Oluşturulma</th>
                            <th>Atanan Kullanıcı</th>
                            <th>Açıklama</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var gorev in Model.Select((val, i) => new { val, i }))
                        {
                            <tr>
                                <td>@(gorev.i + 1)</td>
                                <td>@gorev.val.GorevAdi</td>
                                <td>@gorev.val.Sehir</td>
                                <td>@gorev.val.AracPlaka</td>
                                <td>@gorev.val.EkipmanBilgisi</td>
                                <td>
                                    @if (gorev.val.OnaylandiMi)
                                    {
                                        <span class="badge bg-success">Tamamlandı</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Beklemede</span>
                                    }
                                </td>
                                <td>@gorev.val.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>@gorev.val.Kullanici.FirstName @gorev.val.Kullanici.LastName</td>
                                <td>@gorev.val.Aciklama</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
}
