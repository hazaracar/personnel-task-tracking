@model PersonelTakip.Models.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Şifre Sıfırla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-reset text-white">
                    <h4 class="mb-0">Yeni Şifre Belirle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="ResetPassword" method="post">
                        <input type="hidden" asp-for="Token" />
                        <input type="hidden" asp-for="Email" />

                        <div class="form-group mb-3">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ConfirmPassword"></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-guncelle">Şifreyi Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
